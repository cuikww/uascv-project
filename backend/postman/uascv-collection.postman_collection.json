                "{{baseUrl}}"
              ],
              "path": [
                "cvs"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.expect(pm.response.code).to.equal(200); });",
                  "var json = pm.response.json();",
                  "if (json.data && json.data.length > 0) {",
                  "    pm.environment.set('cvId', json.data[0].id || json.data[0].cv_id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Create CV",
          "request": {
            "method": "POST",
