  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Collection-level prerequest: warn if token missing for non-auth requests",
          "if (!pm.environment.get('token')) {",
          "  // allow auth endpoints without token",
          "  if (pm.request && pm.request.url && pm.request.url.path && pm.request.url.path.includes('auth')) {",
          "    // ok",
          "  } else {",
          "    console.log('No token found in environment (variable `token`). Some requests may fail.');",
          "  }",
          "}"
        ]
      }
