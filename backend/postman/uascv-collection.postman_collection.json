          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login success or proper error', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200,401,404]);",
                  "});",
                  "if (pm.response.code === 200) {",
                  "    var json = pm.response.json();",
                  "    if (json.token) {",
                  "        pm.environment.set('token', json.token);",
                  "        console.log('Token saved to environment variable `token`.');",
                  "    }",
                  "    if (json.user && json.user.id) {",
                  "        pm.environment.set('userId', json.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
