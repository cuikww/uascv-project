              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cvs"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 201', function () { pm.expect(pm.response.code).to.equal(201); });",
                  "var json = pm.response.json();",
                  "if (json.data && json.data.id) pm.environment.set('cvId', json.data.id);"
                ]
              }
            }
          ]
        },
